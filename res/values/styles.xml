<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
    </style>




    <style name="BudgetAppDialog" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="tutorial_explanation_text" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">50dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">#333</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="main_multiselect_button">
        <item name="android:layout_width">@dimen/activity_main_mode_multi_select_button_size</item>
        <item name="android:layout_height">@dimen/activity_main_mode_multi_select_button_size</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_margin">@dimen/activity_main_mode_multi_select_button_margin</item>
    </style>

    <style name="report_table_cell" parent="TextAppearance.AppCompat.Medium">
        <item name="android:padding">3dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="report_table_cell_expense" parent="report_table_cell">
        <item name="android:textColor">#f00</item>
        <item name="android:alpha">0.8</item>
    </style>
    <style name="report_table_cell_budget" parent="report_table_cell">
        <item name="android:textColor">@color/balance_more_than_zero</item>
        <item name="android:alpha">0.8</item>
    </style>
    <style name="report_table_cell_items" parent="report_table_cell">
        <item name="android:textSize">15sp</item>
    </style>



</resources>
