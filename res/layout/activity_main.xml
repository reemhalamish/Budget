<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:animateLayoutChanges="true"
    android:id="@+id/rl_all_main"
    >

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gv_main_all_items"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:columnWidth="150dp"
        android:numColumns="auto_fit"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="10dp"
        />

    <ImageView
        style="@style/main_multiselect_button"
        android:id="@+id/iv_main_multi_delete"
        android:layout_alignParentLeft="true"
        android:src="@drawable/multiselect_trash_can"

        />
    <ImageView
        style="@style/main_multiselect_button"
        android:id="@+id/iv_main_multi_swap"
        android:layout_toRightOf="@id/iv_main_multi_delete"
        android:src="@drawable/multiselect_swap"
        />
    <ImageView
        style="@style/main_multiselect_button"
        android:id="@+id/iv_main_multi_info"
        android:layout_toRightOf="@id/iv_main_multi_delete"
        android:src="@drawable/multiselect_info"
        />
    <ImageView
        style="@style/main_multiselect_button"
        android:id="@+id/iv_main_multi_edit"
        android:layout_toRightOf="@id/iv_main_multi_info"
        android:src="@drawable/multiselect_pencil"
        />


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/iv_main_add"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/plus_blue_circle_new"
        android:scaleType="fitCenter"
        />
</RelativeLayout>
