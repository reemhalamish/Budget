<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/grid_view_tile_back"
    android:layout_height="match_parent"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/vi"
        android:alpha="0.2"
        android:id="@+id/iv_item_hidden_vi"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"

        />

    <Space
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:id="@+id/space_budget_item"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name"
        android:id="@+id/tv_item_name"
        android:layout_below="@+id/space_budget_item"
        android:layout_centerHorizontal="true"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="amount"
        android:id="@+id/tv_item_amount"
        android:layout_below="@+id/tv_item_name"
        android:layout_centerHorizontal="true" />

    <Space
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_item_amount"/>
</RelativeLayout>