<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gv_tut_vf_1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:columnWidth="150dp"
        android:numColumns="auto_fit"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="10dp"
        android:alpha="0.3"
        />

    <TextView
        style="@style/tutorial_explanation_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tut_v1_exp1"
        android:id="@+id/tv_tut_1_explanation1"
        android:layout_below="@+id/gv_tut_vf_1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/tutorial_explanation_text"
        android:text="@string/tut_v1_exp2"
        android:id="@+id/tv_tut_1_explanation2"
        android:layout_below="@+id/tv_tut_1_explanation1"

        />


</RelativeLayout>