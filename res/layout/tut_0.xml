<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_tutorial">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_name"
        android:id="@+id/tv_tut_0_title"
        android:textColor="#000"
        android:textSize="35sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="15dp"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/activity_intro_take_responsibility"
        android:id="@+id/tv_tut_0_intro_line"
        android:paddingTop="10dp"
        android:textColor="#000"
        android:layout_below="@+id/tv_tut_0_title"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:padding="15dp"
        />

    <TextView
        style="@style/tutorial_explanation_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tut_v0_exp1"
        android:id="@+id/tv_tut_0_explanation1"
        android:textSize="25sp"
        android:paddingTop="3dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:id="@+id/iv_tut_0_arrow"
        android:src="@drawable/arrow"
        android:contentDescription="---->"
        tools:ignore="RtlHardcoded"
        android:layout_below="@+id/tv_tut_0_explanation1"
        android:layout_alignParentRight="true" />


</RelativeLayout>