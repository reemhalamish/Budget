<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="halamish.reem.budget.item.MessWithLineDialog"
    style="@style/BudgetAppDialog"
    >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt_addline_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Title"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt_addline_details"
        android:layout_below="@+id/edt_addline_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="details (optional)"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/edt_addline_amount"
        android:layout_below="@+id/edt_addline_details"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="amount"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="expense? (leave empty for income)"
        android:id="@+id/cbx_addline_expense"
        android:layout_below="@+id/edt_addline_amount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add!"
        android:id="@+id/btn_addline_add"
        android:layout_below="@+id/cbx_addline_expense"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
