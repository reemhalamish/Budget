<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="halamish.reem.budget.SettingsActivity"
    android:background="@drawable/blue_white_blue_gradient"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/rg_settings_radio_group">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/settings_language"
            android:id="@+id/tv_settings_language" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English"
            android:id="@+id/rb_settings_lng_eng"
            android:checked="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="עברית - אחיד"
            android:id="@+id/rb_settings_lng_heb_uni"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hebrew (Male) TODO"
            android:id="@+id/rb_settings_lng_heb_male"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hebrew (Female) TODO"
            android:id="@+id/rb_settings_lng_heb_fem"
            android:checked="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_language_hint"
            android:id="@+id/tv_settings_hint_language"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_brn_close_app"
            android:id="@+id/btn_settings_close_app"
            />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/settings_title_budget_related"
        android:id="@+id/tv_settings_title_budget"
        android:layout_below="@+id/rg_settings_radio_group"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_warn_changes_now_on"
        android:id="@+id/tv_settings_hint_budget"
        android:layout_below="@+id/tv_settings_title_budget"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="5dp"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_keep_last_balance_cbx"
        android:id="@+id/cbx_settings_keep_from_last"
        android:checked="true"
        android:layout_below="@+id/tv_settings_hint_budget"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/iv_settings_qmark"
        android:src="@mipmap/help_smaller"
        android:layout_alignTop="@+id/cbx_settings_keep_from_last"
        android:layout_alignBottom="@+id/cbx_settings_keep_from_last"
        android:layout_toRightOf="@+id/cbx_settings_keep_from_last"
        android:layout_toEndOf="@+id/cbx_settings_keep_from_last"
        android:contentDescription="@string/settings_qmark"
        android:scaleType="fitStart"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        />

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
